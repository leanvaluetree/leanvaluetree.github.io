---
layout: layouts/base.njk
pagination:
  data: tools
  size: 1
  alias: tool
permalink: tools/{{ tool.url }}
---

<h2 class="tool-title">{{ tool["Nome tool"] }}</h2>
<div class="contain">
  {{ tool['Descrizione di massima'] | safe }}

  <img class="tool-image" src="/images/a-b-test.svg" />

  {% properties tool %}

  <div class="divider"></div>

  {% usefulness tool %}
  
  <div class="divider"></div>
</div>
