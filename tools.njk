---
layout: layouts/base.njk
pagination:
  data: tools
  size: 1
  alias: tool
permalink: tools/{{ tool.url }}
---


<div class="mx-auto container">
  <h2 class="tool-title">{{ tool["Nome tool"] }}</h2>
  <div class="flex">
    <div class="lg:mr-4">
      <div class="w-3/4">
        <img class="tool-image w-full" src="/images/{{tool.image}}" />
        {{ tool['Descrizione di massima'] | safe }}
        {% usefulness tool %}
        {% todo tool %}
      </div>
    </div>
    <div class="" style="width: 60rem;">
      {% info tool %}
      {% properties tool %}
    </div>
  </div>
</div>

<div class="appendix mt-10">
  {% appendix tool %}
</div>

<div class="help-container tac">
  <h3>Hai bisogno di aiuto?</h3>
  <a href="#" class="contact-experts uppercase">Contatta gli esperti</a>
</div>

{%- set nextTool = tools | next(tool) -%}
{%- set previousTool = tools | previous(tool) -%}

{% if nextTool %}
<div class="text-center py-5 pb-48">
  <h5 class="text-uppercase" style="font-size: 1rem">
    Prossimo workshop
  </h5>
  <div class="line-v"></div>
  <div class="marquee my-5">
    <div>
      <span class="text-uppercase">
        <a href="/tools{{nextTool.url}}" class="text-black">{{nextTool['Nome tool']}}</a>
      </span>
    </div>
  </div>
  <div class="line-v"></div>
  <h5 class="text-uppercase" style="font-size: 1rem">
    Scroll to discover
  </h5>
  <div class="nextpage-trigger py-3" data-url="/tools{{nextTool.url}}"></div>
</div>
{% endif %}
